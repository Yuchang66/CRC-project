rm(list=ls())
options(stringsAsFactors=F)

# process data
merge <- function(data,R){
  x <- read.csv(paste0(data,R,"_sigDEGs.csv",sep=""),header=T,sep = ',')
  x <- x[c(1,2,6)]
  colnames(x) <- c("gene","logFC","FDR")
  rownames(x) <- x[,1]
  x <- x[,-1]
  return(x)
}
#for overlapping down DEGs
D1 <- merge(113513,"down")
D2 <- merge(9348,"down")
D3 <- merge(22598,"down")
D4 <- merge("TCGA","down")
downDEGs <- Reduce(intersect,list(rownames(D1),rownames(D2),rownames(D3),rownames(D4)))  #overlapping down_DEGs
write.csv(downDEGs,"downDEGs.csv",row.names = F)

#for overlapping up DEGs
U1 <- merge(113513,"up")
U2 <- merge(9348,"up")
U3 <- merge(22598,"up")
U4 <- merge("TCGA","up")
upDEGs <- Reduce(intersect,list(rownames(U1),rownames(U2),rownames(U3),rownames(U4))) #overlapping up_DEGs
write.csv(upDEGs,"upDEGs.csv",row.names = F)
